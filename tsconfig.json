{
    "compilerOptions": {
        "baseUrl": "./",
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "h",
        "module": "commonjs",
        "outDir": "dist",
        "paths": {
            "app/*": [
                "./src/*"
            ]
        },
        "sourceMap": true,
        "target": "es5"
    },
    "exclude": [
        "dist"
    ],
    "files": [
        "node_modules/preact/dist/preact.d.ts"
    ],
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
